<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ActivityStartScreen">

    <Button
        android:id="@+id/buttonFront"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/scanFront"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="launchScanFront"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/scanBack"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonFront"
        android:layout_marginTop="70dp"
        android:onClick="launchScanBack"/>

    <TextView
        android:id="@+id/results_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Scanned Text:"
        android:layout_below="@id/buttonBack"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/qr_code_scan_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="center"
        android:text="test"
        android:layout_below="@id/results_title"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
